<div>
    <style>
        .addNewUser-btn {
            font-size: 24px;
            text-decoration: none;
            border: 1px solid gray;
            padding: 5px 10px;
            border-radius: 5px;
            display: block;
            width: fit-content;
            margin: 20px 10px 0;
            float: right;
        }

        .addNewUser-btn:hover {
            color: lawngreen;
        }

