            margin: 30px 0 50px;
            overflow: visible;
            height: 1px;
        }

        #hr5012ee2da3a449a78539e32f813e132c::after {
            content: "لیست کاربران";
            position: relative;
            top: -15px;
            right: 50%;
            transform: translateX(50%);
            font-weight: bold;
            border: 1px solid gray;
            background-color: white;
            padding: 5px;
            display: block;
            width: fit-content;
            text-align: center;
        }
    </style>
    <div class="clearfix">
        <a asp-controller="Account" asp-action="Signup" class="addNewUser-btn">
            <i class="fa-solid fa-square-plus"></i>
            <span style="font-size: 16px;font-weight: bold;">اضافه کردن کاربر جدید</span>
        </a>

