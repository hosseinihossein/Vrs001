@model object
@{
    ViewBag.ResultState = ViewBag.ResultState ?? "info";
}
<!-------------------------------------------------------->
<style>
    #banner018c300dd4fb44579c34127441dbe783.danger {
        background-color: red;
        color: white;
    }

    #banner018c300dd4fb44579c34127441dbe783.success {
        background-color: lawngreen;
        color: #333;
    }

    #banner018c300dd4fb44579c34127441dbe783.info {
        background-color: skyblue;
        color: #333;
    }

    #banner018c300dd4fb44579c34127441dbe783 h1 {
        padding: 14px 16px;
        margin: 10px auto;
        width: fit-content;
    }
</style>
<div id="banner018c300dd4fb44579c34127441dbe783" class="@ViewBag.ResultState">
    <h1>Result</h1>
</div>

@Html.Raw(Model.ToString())

<style>
    #Result-btn-div {
        width: fit-content;
        margin: auto;
    }

    #Result-btn-div a.danger {
        background-color: red;
        color: white;
        display:
            @(ViewBag.DangerBtnName
                        ==
                        null
                        ?
                        "none"
                        :
                        "block")
        ;
    }

    #Result-btn-div a.success {
        background-color: lawngreen;
        color: #333;
        display:
            @(ViewBag.SuccessBtnName
                        ==
                        null
                        ?
                        "none"
                        :
                        "block")
        ;
    }

    #Result-btn-div a.info {
        background-color: skyblue;
        color: #333;
        display:
            @(ViewBag.InfoBtnName
                        ==
                        null
                        ?
                        "none"
                        :
                        "block")
        ;
    }

    #Result-btn-div a {
        padding: 10px 16px;
        margin: 10px;
        width: fit-content;
        text-decoration: none;
    }
</style>
<div id="Result-btn-div">
    <a href="@ViewBag.SuccessBtnHref" class="success">@ViewBag.SuccessBtnName</a>
    <a href="@ViewBag.InfoBtnHref" class="info">@ViewBag.InfoBtnName</a>
    <a href="@ViewBag.DangerBtnHref" class="danger">@ViewBag.DangerBtnName</a>
</div>